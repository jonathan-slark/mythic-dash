# Doxygen configuration for a simple C game project

# Project info
PROJECT_NAME           = "maze__Maze Muncher"
PROJECT_BRIEF          = "A faithful recreation of an arcade classic."
OUTPUT_DIRECTORY       = doc
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# Input
RECURSIVE              = YES
INPUT                  = src

# Comment style
EXTRACT_ALL            = YES
EXTRACT_STATIC         = YES
EXTRACT_PRIVATE        = NO
JAVADOC_AUTOBRIEF      = YES

# Output formatting
QUIET                  = YES
GENERATE_TREEVIEW      = YES

# Optional: treat underscores as word boundaries for readability
SHOW_NAMESPACES        = YES
OPTIMIZE_OUTPUT_FOR_C  = YES

# File patterns
FILE_PATTERNS          = *.c *.h

# Warnings
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES

# HTML output options
HTML_OUTPUT            = html
HTML_COLORSTYLE_HUE    = 210
HTML_COLORSTYLE_SAT    = 100
HTML_COLORSTYLE_GAMMA  = 80

# Disable clutter
HIDE_UNDOC_MEMBERS     = YES
